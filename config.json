{
    "mcpServers": {
        "time_server": {
            "command": "python",
            "args": ["-m", "mcp_server_time" , "--local-timezone=America/New_York"]
        },
        "tavily_server": { 
            "command": "python",
            "args": ["-m", "mcp_server_tavily", "--api-key=tvly-xxx"]
        },
        "poetry_server": {
            "command": "python",
            "args": ["/app/backend/data/mcp/poem.py"],
            "description": "Provides poetry query tools."
        }
    }
}